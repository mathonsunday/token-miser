{
  "name": "token-miser",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.12.0"
  },
  "scripts": {
    "dev": "tsc -b --noEmit && vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc -b --noEmit",
    "dead-code": "knip",
    "dead-code:fix": "knip --fix",
    "security": "semgrep --config \"p/default\" src/ api/ --severity ERROR --severity WARNING",
    "mutate": "npx mutation-test-gen",
    "verify": "npm run type-check && npm run lint && npm run dead-code && npm run security && npm test",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vercel/node": "^3.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-redos": "^4.5.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "mutation-test-gen": "file:../mutation-test-gen",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^5.4.0",
    "vitest": "^4.0.17"
  }
}
